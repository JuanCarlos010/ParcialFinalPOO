<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.VBox?>

<TabPane fx:id="tabPane" xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml" fx:controller="com.example.banco.HelloController">
   <Tab text="Registrar Transacción">
      <VBox>
         <GridPane>
            <padding><Insets top="10" right="10" bottom="10" left="10"/></padding>
            <Label text="ID del Cliente:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
            <TextField fx:id="txtClienteId" GridPane.rowIndex="0" GridPane.columnIndex="1"/>
            <Label text="Número de Tarjeta:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
            <TextField fx:id="txtNumeroTarjeta" GridPane.rowIndex="1" GridPane.columnIndex="1"/>
            <Label text="Monto Total:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
            <TextField fx:id="txtMontoTotal" GridPane.rowIndex="2" GridPane.columnIndex="1"/>
            <Label text="Descripción:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
            <TextField fx:id="txtDescripcion" GridPane.rowIndex="3" GridPane.columnIndex="1"/>
            <Button text="Registrar Transacción" onAction="#registrarTransaccion" GridPane.rowIndex="4" GridPane.columnIndex="1"/>
         </GridPane>
      </VBox>
   </Tab>
   <Tab text="Historial de Transacciones">
      <VBox>
         <GridPane>
            <padding><Insets top="10" right="10" bottom="10" left="10"/></padding>
            <Label text="ID del Cliente:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
            <TextField fx:id="txtClienteIdHistorial" GridPane.rowIndex="0" GridPane.columnIndex="1"/>
            <Button text="Buscar" onAction="#buscarTransacciones" GridPane.rowIndex="1" GridPane.columnIndex="1"/>
         </GridPane>
         <TableView fx:id="tableView">
            <columns>
               <TableColumn text="ID" fx:id="colId"/>
               <TableColumn text="Fecha de Compra" fx:id="colFecha"/>
               <TableColumn text="Monto Total" fx:id="colMonto"/>
               <TableColumn text="Descripción" fx:id="colDescripcion"/>
            </columns>
         </TableView>
      </VBox>
   </Tab>
</TabPane>

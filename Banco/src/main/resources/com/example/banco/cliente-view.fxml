<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox spacing="10" xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml" fx:controller="com.example.banco.ClienteController">
    <HBox spacing="10">
        <TextField fx:id="nombreField" promptText="Nombre"/>
        <TextField fx:id="direccionField" promptText="Dirección"/>
        <TextField fx:id="telefonoField" promptText="Teléfono"/>
        <Button text="Agregar" onAction="#handleAgregarCliente"/>

    </HBox>
    <HBox spacing="10">
        <TextField fx:id="clienteIdField" promptText="ID Cliente"/>
        <TextField fx:id="startDateField" promptText="Fecha Inicio (YYYY-MM-DD)"/>
        <TextField fx:id="endDateField" promptText="Fecha Fin (YYYY-MM-DD)"/>
        <Button text="Buscar Transacciones" onAction="#handleBuscarTransacciones"/>
        <Button text="Limpiar Campos" onAction="#handleLimpiarCampos"/>
    </HBox>
    <HBox spacing="10">
        <TextField fx:id="facilitadorField" promptText="Facilitador (ej. Visa)"/>
        <Button text="Generar Reporte" onAction="#handleGenerarReporte"/>
    </HBox>
    <TableView fx:id="clienteTable">
        <columns>
            <TableColumn fx:id="idColumn" text="ID"/>
            <TableColumn fx:id="nombreColumn" text="Nombre"/>
            <TableColumn fx:id="direccionColumn" text="Dirección"/>
            <TableColumn fx:id="telefonoColumn" text="Teléfono"/>
        </columns>
    </TableView>
    <TableView fx:id="transaccionTable">
        <columns>
            <TableColumn fx:id="transaccionIdColumn" text="ID"/>
            <TableColumn fx:id="fechaColumn" text="Fecha"/>
            <TableColumn fx:id="montoColumn" text="Monto"/>
            <TableColumn fx:id="descripcionColumn" text="Descripción"/>
            <TableColumn fx:id="tarjetaIdColumn" text="ID Tarjeta"/>
        </columns>
    </TableView>
    <HBox spacing="10">
        <Button text="Mostrar Tarjetas" onAction="#handleMostrarTarjetas"/>
        <Label fx:id="tarjetasLabel"/>
    </HBox>
</VBox>

